- if Spree::Post.all.any?
  #news-container
    %ul
      - Spree::Post.published.each do |post|
        %li
          %div
            %h6= post.created_at.strftime("%B %d, %Y")
            = post.description

:javascript
  $(function(){
    $('#news-container').vTicker({
      speed: 1000,
      pause: 4000,
      animation: 'fade',
      mousePause: true,
      showItems: 1
    });
  });
